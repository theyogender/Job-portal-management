        <div class="employer">
            <h3>Company A</h3>
            <p>Industry: Technology</p>
            <p>Location: New York, USA</p>
            <p>Contact: contact@companyA.com</p>
        </div>
        <div class="employer">
            <h3>Company B</h3>
            <p>Industry: Finance</p>
            <p>Location: San Francisco, USA</p>
            <p>Contact: contact@companyB.com</p>
        </div>
        <!-- Add more employer information here -->
    </section>

    <header>
        <h1>Job Seekers</h1>
    </header>
    <section class="job-seekers">
        <div class="job-seeker">
            <h2>John Doe</h2>
            <p>Email: john.doe@example.com</p>
            <p>Skills: Web Development, UI/UX Design</p>
            <p>Experience: 3 years</p>
        </div>
        <div class="job-seeker">
            <h2>Jane Smith</h2>
            <p>Email: jane.smith@example.com</p>
            <p>Skills: Data Analysis, Python Programming</p>
            <p>Experience: 5 years</p>
        </div>
        <!-- Add more job seekers here -->
    </section>
    <center><p>Click below to Enter your Details to Apply for Job</p></center>

    <center><p><a href="Jobseeker.html">Apply</a></p></center>

